<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" alignment="CENTER" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="it.tris.client.GameController">

    <GridPane hgap="5" vgap="5" alignment="CENTER">
        <Button fx:id="btn00" onAction="#handleMove" minWidth="80" minHeight="80"/>
        <Button fx:id="btn01" onAction="#handleMove" minWidth="80" minHeight="80" GridPane.columnIndex="1"/>
        <Button fx:id="btn02" onAction="#handleMove" minWidth="80" minHeight="80" GridPane.columnIndex="2"/>
        <Button fx:id="btn10" onAction="#handleMove" minWidth="80" minHeight="80" GridPane.rowIndex="1"/>
        <Button fx:id="btn11" onAction="#handleMove" minWidth="80" minHeight="80" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
        <Button fx:id="btn12" onAction="#handleMove" minWidth="80" minHeight="80" GridPane.rowIndex="1" GridPane.columnIndex="2"/>
        <Button fx:id="btn20" onAction="#handleMove" minWidth="80" minHeight="80" GridPane.rowIndex="2"/>
        <Button fx:id="btn21" onAction="#handleMove" minWidth="80" minHeight="80" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
        <Button fx:id="btn22" onAction="#handleMove" minWidth="80" minHeight="80" GridPane.rowIndex="2" GridPane.columnIndex="2"/>
    </GridPane>


    <Button fx:id="returnToLobbyButton" text="Torna alla Lobby" visible="false" onAction="#returnToLobby" minWidth="200"/>
</VBox>
